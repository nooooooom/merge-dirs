{
  "name": "@nooooooom/merge-dirs",
  "version": "1.0.0",
  "description": "Node module for synchronously and recursively merging multiple folders or collections of files into one folder.",
  "main": "dist/index.ts",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "merge-dirs": "bin/merge-dirs.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nooooooom/merge-dirs.git"
  },
  "scripts": {
    "build": "rimraf dist && tsup ./src/index.ts --dts --format esm,cjs",
    "test": "npm run clean && jest",
    "clean": "rimraf __test__/snapshot",
    "release": "npm run build && npm run publish --no-git-checks"
  },
  "author": "nooooooom",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "cac": "6.7.9",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsup": "^5.12.1",
    "typescript": "~4.5.4"
  }
}
